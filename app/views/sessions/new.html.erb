<h2>Login</h2>

<%= form_tag login_path, :class => 'form' do %>
  <%= label :user_id, 'User Id', :class => 'col-form-label' %>
  <%= text_field :user_id, 'User id'%>
  <%= label :email, 'Email', :class => 'col-form-label' %>
  <%= text_field :email, 'Email' %>
  <br/>
  <%= submit_tag 'Login to my account', :class => 'btn btn-primary' %>
  <%= link_to 'Sign up for an account', new_user_path, :class => 'btn btn-secondary' %>

<% end %>

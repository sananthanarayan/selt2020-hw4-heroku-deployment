<h2>Sign Up</h2>

<%= form_tag user_path, :class => 'form' do %>
  <%= label :user_id, 'User Id', :class => 'col-form-label' %>
  <%= text_field :user_id, 'User id'%>
  <%= label :email, 'Email', :class => 'col-form-label' %>
  <%= text_field :email, 'Email' %>
  <br/>
  <%= submit_tag 'Save Changes', :class => 'btn btn-primary' %>
  <%= link_to 'Cancel', user_path, :class => 'btn btn-secondary' %>
<% end %>

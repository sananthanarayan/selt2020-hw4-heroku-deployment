<h2>Sign Up</h2>

<%= form_tag users_path, :class => 'form' do %>
  <%= label :user_id, 'User Id', :class => 'col-form-label', :id => 'signupUser' %>
  <%= text_field :user, :user_id, :id => 'signupUser' %>
  <%= label :email, 'Email', :class => 'col-form-label', :id => 'signupEmail' %>
  <%= text_field :user, :email, :id => 'signupEmail' %>
  <br/>
  <%= submit_tag 'Sign-up for an account', :class => 'btn btn-primary', :id => 'signupCreate' %>
<% end %>
